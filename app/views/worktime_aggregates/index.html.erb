<div class = "container">
  <div class = "wrapper col-md-12 col-sm-10">
  <p> <%= notice %> </p>

    <h3><%= @construction.name %></h3>
    <br>
    <br>
    <div class = "pull-left">
      <h5>　表示年月：<%= @start_year %>年<%= @start_month %>月</h5>
      <h5>時間合計：<%= WorktimeAggregate.sum_of_constructiontimes(@construction.id, @start_date, @start_year, @start_month) %>時間</h5>
      <h5>現場：<%= @construction.workplace.name %>　　</h5>
    </div>
      <table class="table table-striped table-bordered table-hover">
        <tbody>
          <tr>
            <th>日付</th>
            <th>時間合計/日</th>
          </tr>
          <% @worktime_aggregates.each do |worktime_aggregate| %>
          <%#binding.pry%>
          <tr>
            <td><%= worktime_aggregate[:day].strftime("%m/%d") %></td>
            <td><%= worktime_aggregate[:time] %></td>
          </tr>
          <% end %>
        </tbody>
      </table>
  </div>
  <div id="page-top-btn" class="page-top-btn">
    <p><a class="move-page-top" id="move-page-top">▲</a></p>
  </div>
</div>
