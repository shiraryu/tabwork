<div class = "container">
  <div class = "wrapper col-md-12 col-sm-10">
  <p> <%= notice %> </p>
    <h3>作業勤情報一覧</h3>
    <br>
    <br>
      <table class="table table-striped table-bordered table-hover">
        <tbody>
          <% @attendance.worktime_aggregates.each do |worktime_aggregate| %>
            <tr><td BgColor="#BFBFBF"><%= worktime_aggregate.construction.name %></td></tr>
            <tr><td><%= worktime_aggregate.constructiontime %></td></tr>
          <% end %>
        </tbody>
      </table>
      <br>
      <br>
      <div class = "const_attendance">
        <%= link_to attendance_path(@attendance.id) do %>
          <h5>戻る</h5>
        <% end %>
      </div>
  </div>
  <div id="page-top-btn" class="page-top-btn">
    <p><a class="move-page-top" id="move-page-top">▲</a></p>
  </div>
</div>
