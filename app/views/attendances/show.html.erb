<div class = "container">
  <div class = "wrapper col-md-12 col-sm-10">
  <p> <%= notice %> </p>
    <h3>作業情報一覧（個人）</h3>
    <br>
    <%= link_to "戻る",attendances_path,method: :get %>
    <br>
    <br>
    <br>
      <table class="table table-striped table-bordered table-hover">
        <tbody>
          <tr>
            <th>日付</th>
            <th>現場</th>
            <th>工事件数</th>
            <th>作業総時間</th>
          </tr>
          <% @attendances.each do |attendance| %>
          <% if attendance.holiday == true %>
            <td><%= attendance.opening_datetime.strftime("%m/%d") %></td>
            <td></td>
            <td></td>
            <td></td>
            <td class = "attendance_button hidden-xs hidden-sm"><%= link_to "編集",edit_attendance_path(attendance.id),class:'btn btn-default btn-cyan700_rsd btn-sm' %></td>
            <td class = "attendance_button hidden-xs hidden-sm"><%= link_to "削除", attendance_path(attendance.id), method: :delete, data: { confirm: '本当に削除していいですか？'}, class: 'btn btn-default   btn-pink400_rsd btn-sm' %></td>
          <% else %>
            <td><%= attendance.opening_datetime.strftime("%m/%d") %></td>
            <td><%= attendance.worktime_aggregates.first.construction.workplace.name %></td>
            <td><%= attendance.worktime_aggregate_constructions.count %></d>
            <td><%= attendance.worktime_aggregates.sum(:constructiontime) %></td>
            <td class = "attendance_button"><%= link_to "詳細",attendance_detail_path(attendance.id),class:'btn btn-default btn-cyan700_rsd btn-sm' %></td>
            <td class = "attendance_button hidden-xs hidden-sm"><%= link_to "編集",edit_attendance_path(attendance.id),class:'btn btn-default btn-cyan700_rsd btn-sm' %></td>
            <td class = "attendance_button hidden-xs hidden-sm"><%= link_to "削除", attendance_path(attendance.id), method: :delete, data: { confirm: '本当に削除していいですか？'}, class: 'btn btn-default   btn-pink400_rsd btn-sm' %></td>
          <% end %>
        </tbody>
        <% end %>
      </table>
  </div>
  <div id="page-top-btn" class="page-top-btn">
    <p><a class="move-page-top" id="move-page-top">▲</a></p>
  </div>
</div>
