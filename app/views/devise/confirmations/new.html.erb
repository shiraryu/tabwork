<div class="top container">
  <div class="wrapper col-md-4 col-md-offset-4 col-sm-10">
    <h2>確認メール再送信</h2>
    <br>
    <%= form_for(resource, as: resource_name, url: confirmation_path(resource_name), html: { method: :post }) do |f| %>
      <%= devise_error_messages! %>

      <div class="field">
        <br>
        <%= f.email_field :email, autofocus: true, class: "form-control", placeholder: "メールアドレス", value: (resource.pending_reconfirmation? ? resource.unconfirmed_email : resource.email) %>
      </div>
      <div class="actions">
        <%= f.submit "確認メールを送信する", class: "btn btn-primary btn-block" %>
      </div>
    <% end %>
    <br>
    <%= render "devise/shared/links" %>
  </div>
</div>
